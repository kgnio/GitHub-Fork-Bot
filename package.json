{
  "name": "github-fork-bot",
  "version": "1.0.0",
  "main": "index.js",
  "description": "A GitHub automation bot that forks repositories, formats code, adds Docker support, ensures CI/CD, detects dead code, generates missing tests, creates OpenAPI docs, runs security audits, and opens automated PRs.",
  "author": "Kgnio",
  "license": "MIT",
  "scripts": {
    "start": "node index.js",
    "security:audit": "node src/security/runSecurityAudit.js",
    "deadcode": "node modules/deadCodeDetector.js",
    "generate:tests": "node src/tests/generateMissingTests.js",
    "openapi:generate": "node modules/openapiDoc.js",
    "lint": "eslint .",
    "format": "prettier --write .",
    "dockerfile:add": "node modules/addDockerfile.js",
    "ci:ensure": "node modules/ensureCI.js"
  },
  "keywords": [
    "github",
    "bot",
    "automation",
    "fork",
    "pull-request",
    "dockerfile",
    "ci-cd",
    "dead-code",
    "test-generator",
    "openapi",
    "security-audit"
  ],
  "dependencies": {
    "@octokit/rest": "^18.12.0",
    "axios": "^1.11.0",
    "dotenv": "^17.2.0",
    "openai": "^5.10.2",
    "simple-git": "^3.28.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.31.0",
    "@eslint/json": "^0.13.1",
    "@eslint/markdown": "^7.1.0",
    "depcheck": "^1.4.7",
    "eslint": "^9.31.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-jsonc": "^2.20.1",
    "eslint-plugin-markdown": "^5.1.0",
    "globals": "^16.3.0",
    "knip": "^5.62.0",
    "npm-check-updates": "^18.0.2",
    "prettier": "^3.6.2",
    "ts-prune": "^0.10.3"
  }
}
